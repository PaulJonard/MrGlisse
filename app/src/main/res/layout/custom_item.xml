<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp"
    android:layout_margin="5sp"
    android:id="@+id/customItem"
    android:background="#4DFFA07A">

    <TextView
        android:id="@+id/customStaticBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailBrand"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customStaticModel"
        android:layout_marginEnd="5sp"/>

    <TextView
        android:id="@+id/customRowBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/detailBrand"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/customStaticBrand"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/customRowModel"/>

    <TextView
        android:id="@+id/customStaticModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailModel"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customStaticBrand"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5sp"/>

    <TextView
        android:id="@+id/customRowModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/detailModel"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/customStaticModel"
        app:layout_constraintTop_toBottomOf="@id/customRowBrand"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detailSize"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/customRowSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5sp"/>

    <TextView
        android:id="@+id/customRowSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="89"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>